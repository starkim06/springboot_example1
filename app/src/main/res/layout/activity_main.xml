<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:layout_marginEnd="24dp"
        android:text="사진 업로드"
        app:layout_constraintBottom_toTopOf="@+id/btn_show_photo_time"
        app:layout_constraintEnd_toEndOf="@+id/btn_show_photo_time" />

    <Button
        android:id="@+id/btn_show_photo_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="215dp"
        android:text="시간순으로 사진보기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_show_photo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="제목순으로 사진보기"
        app:layout_constraintStart_toStartOf="@+id/btn_show_photo_time"
        app:layout_constraintTop_toBottomOf="@+id/btn_show_photo_time" />
</android.support.constraint.ConstraintLayout>
